{
  "title": "Border Lines",
  "description": "Thiss is a set of simple expressions that will position four lines at the edges of a rectangular layer and maintain their relationship to the rectangle as it moves and scales.",
  "expressions": {
    "lowerHorizontal": "m = thisComp.layer(\"master\");\n[width/2,m.position[1] + (m.height/2)*(m.scale[1]/100)]",
    "upperHorizontal": "m = thisComp.layer(\"master\");\n[width/2,m.position[1] - (m.height/2)*(m.scale[1]/100)]",
    "rightVertical": "m = thisComp.layer(\"master\");\n[m.position[0] + (m.width/2)*(m.scale[0]/100),height/2]",
    "leftVertical": "m = thisComp.layer(\"master\");\n[m.position[0] - (m.width/2)*(m.scale[0]/100),height/2]"
  }
}
